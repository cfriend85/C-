        <span asp-validation-for="PetName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Species">Species</label>
        <input asp-for="Species" class="form-control">
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ShipId">Trick</label>
        <input asp-for="Trick" class="form-control">
        </select>
        <span asp-validation-for="Trick" class="text-danger"></span>
    </div>
