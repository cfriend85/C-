<div>
    <h1>Tell me about your pet!</h1>

    <form action="Add" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control"><br>
        </div>

        <div class="form-group">
            <label for="name">Species</label>
            <input type="text" name="species" class="form-control"><br>
        </div>

        <div class="form-group">
            <label for="name">Age</label>
            <input type="number" name="age" class="form-control"><br>
        </div>
        <input type="submit" value="submit" class="btn btn-primary">
    </form><br>

    <h3>Most Recent Pets Name: @ViewBag.Name</h3>
    <h3>Most Recent Pets Species: @ViewBag.Species</h3>
    <h3>Most Recent Pets Age: @ViewBag.Age</h3>
</div>