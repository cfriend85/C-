@model LoginUser;

<form action="login" method="post">
    <div class="form-group">
        <label for="Email">Email Address</label>
        <input asp-for="LEmail" class="form-control">
        <span asp-validation-for="LEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input asp-for="LPassword" class="form-control">
        <span asp-validation-for="LPassword" class="text-danger"></span>
    </div>
    <input type="submit" value="Login" class="btn btn-success">
</form>